{
    "device_settings": {
        "laptop": {
            "primary": true,
            "role": "core_processing",
            "capabilities": ["entity_creation", "word_manifestation", "akashic_records"]
        },
        "vr_headset": {
            "enabled": true,
            "role": "immersive_interface",
            "xr_interface": "OpenXR",
            "capabilities": ["interaction", "visualization", "gestures"]
        },
        "iphone": {
            "enabled": true,
            "role": "scanning_device",
            "capabilities": ["lidar_scanning", "object_recognition", "mobile_view"]
        }
    },
    
    "networking": {
        "auto_discovery": true,
        "server_mode": true,
        "server_address": "0.0.0.0",
        "server_port": 45678,
        "tcp_port": 45679,
        "udp_port": 45680,
        "scan_data_port": 45681,
        "connection_timeout_ms": 5000,
        "reconnect_attempts": 3
    },
    
    "scan_settings": {
        "resolution": 0.05,
        "point_limit": 100000,
        "max_distance_meters": 10.0,
        "auto_recognize_objects": true,
        "confidence_threshold": 0.7,
        "scan_timeout_seconds": 30,
        "visualization_type": "mesh"
    },
    
    "entity_sync": {
        "sync_interval_ms": 100,
        "batch_size": 10,
        "priority_radius_meters": 5.0,
        "lod_enabled": true,
        "max_entities_per_device": 1000
    },
    
    "reality_settings": {
        "realities": {
            "physical": {
                "default": true,
                "visual_fx": {
                    "bloom_enabled": false,
                    "fog_enabled": false,
                    "ambient_light": "natural"
                }
            },
            "digital": {
                "visual_fx": {
                    "bloom_enabled": true,
                    "bloom_intensity": 0.5,
                    "fog_enabled": true,
                    "fog_color": [0, 0.1, 0.2],
                    "grid_overlay": true,
                    "ambient_light": "digital"
                }
            },
            "astral": {
                "visual_fx": {
                    "bloom_enabled": true,
                    "bloom_intensity": 1.2,
                    "fog_enabled": true,
                    "fog_color": [0.1, 0, 0.2],
                    "particle_effects": true,
                    "ambient_light": "ethereal"
                }
            }
        },
        "transitions": {
            "physical_to_digital": {
                "duration_seconds": 1.5,
                "effect": "grid_overlay"
            },
            "digital_to_astral": {
                "duration_seconds": 2.0,
                "effect": "ethereal_particles"
            },
            "astral_to_physical": {
                "duration_seconds": 1.8,
                "effect": "reality_solidify"
            }
        }
    },
    
    "scale_settings": {
        "scales": {
            "cosmic": {
                "factor": 0.000000001,
                "description": "1 unit = 1 billion light years"
            },
            "galactic": {
                "factor": 0.0000001,
                "description": "1 unit = 100 million light years"
            },
            "stellar": {
                "factor": 0.00001,
                "description": "1 unit = 10,000 light years"
            },
            "planetary": {
                "factor": 0.001,
                "description": "1 unit = 1 million km"
            },
            "human": {
                "factor": 1.0,
                "default": true,
                "description": "1 unit = 1 meter"
            },
            "microscopic": {
                "factor": 1000.0,
                "description": "1 unit = 1 millimeter"
            },
            "quantum": {
                "factor": 1000000.0,
                "description": "1 unit = 1 micrometer"
            }
        },
        "gestures": {
            "pinch": "scale_down",
            "spread": "scale_up"
        }
    },
    
    "performance": {
        "thread_allocation": {
            "ai_thread_percent": 40,
            "physics_thread_percent": 20,
            "entity_thread_percent": 20,
            "reality_thread_percent": 10,
            "memory_thread_percent": 10
        },
        "max_fps": 90,
        "dynamic_resolution": true,
        "memory_limits": {
            "entity_cache_mb": 128,
            "scan_data_mb": 256,
            "texture_memory_mb": 512
        }
    },
    
    "integration": {
        "auto_initialize": true,
        "debug_mode": false,
        "log_level": "info",
        "auto_connect_devices": true
    }
}
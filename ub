#!/bin/bash
# Universal Being CLI Wrapper
# Makes it easier to run the generator

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
GODOT_SCRIPT="$SCRIPT_DIR/cli/universal_being_generator.gd"

# Check if Godot is in PATH
if ! command -v godot &> /dev/null; then
    echo "Error: Godot not found in PATH"
    echo "Please add Godot to your PATH or specify the full path"
    exit 1
fi

# Run the CLI with all arguments
godot --headless --script "$GODOT_SCRIPT" -- "$@"